/* 头部 */
.top_root {
  display: flex;
  align-items: center;
  margin: 40rpx;
}
van-image {
  margin-right: 40rpx;
}
.top_name {
  font-size: 40rpx;
}
/* 条目 */
.item {
  display: flex;
  align-items: center;
  height: 90rpx;
  border-bottom: 2rpx solid gainsboro;
}
.item_name{
  font-style: 42rpx;
  margin-left: 30px;
}
.right_arrow {
  border: solid black;
  border-width: 0 3px 3px 0;
  padding: 3px;
  position: absolute;
  right: 15px;
  transform: rotate(-45deg);
  -webkit-transform: rotate(-45deg);
}
button{

  background-color: white;
  border: none;
  text-align: left;
  padding: 0;
  margin: 0;
  line-height: 1.3;
  font-style: 42rpx;
}
button::after{
  border: none;
  border-radius: 0;
}
.button-hover {
  color: #000;
  background-color: white;
}